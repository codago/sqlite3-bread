<!DOCTYPE html>
<html>
<head>

  <meta charset="utf-8">
  <link rel="stylesheet" href="/css/bootstrap.css">
</head>
<body>
  <h1>Edit Data</h1>

  <form  action="/edit/<%= data.id %>" method="post" class="form-horizontal">
    <title>Edit Data</title>

    <div class="form-group">
      <label for="string" class="col-sm-2 control-label">String</label>
      <div class="col-sm-10">
        <input type="text" name="string" class="form-control" id="string" value="<%= data.string %>" placeholder="">
      </div>
    </div>


    <div class="form-group">
      <label for="string" class="col-sm-2 control-label">Integer</label>
      <div class="col-sm-10">
        <input type="number" name="integer" class="form-control" id="integer" value="<%= data.integer %>" placeholder="">
      </div>
    </div>


    <div class="form-group">
      <label for="string" class="col-sm-2 control-label">Float</label>
      <div class="col-sm-10">
        <input type="float" name="float" class="form-control" id="float" value="<%= data.float %>" placeholder="">
      </div>
    </div>


    <div class="form-group">
      <label for="string" class="col-sm-2 control-label">Date</label>
      <div class="col-sm-10">
        <input type="date" name="date" class="form-control" id="date" value="<%= data.date %>" placeholder="">
      </div>
    </div>



    <div class="form-group">
      <label for="boolean" class="col-sm-2 control-label">Boolean</label>
      <div class="col-sm-10">
        <select name="boolean" class="form-control"  >
          <option class="form-control" value="true"<%= data.boolean == "true"?'selected':''%>>True</option>
          <option  class="form-control" value="false"<%= data.boolean == "false"?'selected':''%>>False</option>
        </select>
      </div>
    </div>






    <div class="form-group">
      <div class="col-sm-2 control-label"></div>
      <div class="col-sm-10">
      </br><button class="btn btn-primary" type="submit" >update</button>
    </div>
  </div>


</form>
</body>
</html>
